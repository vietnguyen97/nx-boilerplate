{
  "name": "@my-workspace/source",
  "version": "1.0.12",
  "license": "MIT",
  "scripts": {
    "serve:app1": "nx serve app1",
    "serve:app2": "nx serve app2",
    "release:app1": "nx run app1:version",
    "release:app2": "nx run app2:version",
    "release:shared-utils": "nx run shared-utils:version",
    "release:all": "nx run-many --target=version --all",
    "release:major": "nx run workspace:version --releaseAs=major",
    "release:minor": "nx run workspace:version --releaseAs=minor",
    "release:patch": "nx run workspace:version --releaseAs=patch",
    "commit": "cz",
    "build": "nx run-many --target=build --all",
    "build:versioned": "yarn version && yarn build"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "private": true,
